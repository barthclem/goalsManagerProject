<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.barthclem.goalsmanager.EditGoal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTitleText"
        android:hint="Title"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center"/>
    <EditText
        android:id="@+id/editDurationText"
        android:hint="Duration"
        android:inputType="textEmailAddress"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:gravity="center" />

    <Button
        android:id="@+id/editGoalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="20sp"
        android:text="Edit Goal"
        android:textColor="@color/common_signin_btn_dark_text_pressed"
        android:background="@color/button"/>

</LinearLayout>
